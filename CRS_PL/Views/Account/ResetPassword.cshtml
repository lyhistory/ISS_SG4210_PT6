@{
    ViewBag.Title = "Reset password";
}

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#btnSubmit').click(function () {
                $.ajax({
                    type: 'post',
                    url: '/account/PostResetPassword',
                    data: { password: $('#password').val(), newpassword: $("#newpassword").val() }
                }).done(function (data) {
                    if (data.Code == 1) {
                        if (data.redirectUrl != '' && data.redirectUrl != undefined) {
                            window.location.href = data.redirectUrl;
                        } else {
                            window.location = "/home/index";
                        }
                    } else if (data.Code == 0) {
                        alert("old password wrong!");
                    } else {
                        alert("reset password failed");
                    }
                });
            });
        });
    </script>
}
<div class="container center-block">
<h1 class="page-header">RESET PASSWORD</h1>
        <form>
            <div class="form-group">
                <label for="password">Current Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="newpassword">New Password</label>
                <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="New Password">
            </div>
            <div class="form-group">
                <label for="newpassword">Confirm New Password</label>
                <input type="password" class="form-control" id="confirmnewpassword" name="confirmnewpassword" placeholder="Confirm New Password">
            </div>
            <input type="button" class="btn btn-default" value="Submit" id="btnSubmit" />
        </form>
</div>
