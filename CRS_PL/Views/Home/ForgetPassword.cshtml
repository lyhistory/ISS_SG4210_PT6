@{
    ViewBag.Title = "ForgetPassword";
}
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#btnSubmit').click(function () {
                $.ajax({
                    type: 'post',
                    url: '/home/postforgetpassword',
                    data: { idnumber: $('#idnumber').val(), email: $("#email").val() }
                }).done(function (data) {
                    alert(data.Message);
                });
            });
        });
    </script>
}
<div class="container-fluid">
    <h1 class="page-header">ForgetPassword</h1>
    <form>
        <div class="form-group">
            <label for="idnumber">ID NUMBER</label>
            <input type="text" class="form-control" id="idnumber" name="idnumber" placeholder="idnumber">
        </div>
        <div class="form-group">
            <label for="email">email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="email">
        </div>

        <input type="button" class="btn btn-default" value="Submit" id="btnSubmit" />
    </form>
</div>

